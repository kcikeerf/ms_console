<!--list columns-->
<th data-options="field:'name',align:'center', width:'10%'">resources</th>
<th data-options="field:'method',align:'center', width:'10%'">method</th>
<th data-options="field:'path',align:'center', width:'30%'">url_path</th>
<th data-options="field:'description',align:'center', width:'10%'">description</th>
<th data-options="field:'roles',align:'center', width:'30%'">roles</th>
<th data-options="field:'updated_at',align:'center', width:'12%'">更新时间</th>

<!--form in dialog-->
<% content_for :form do %>
<div class="easyui-tabs" style="width:100%; height:300px;">
  <div title="<%= LABEL("managers.users.basic")%>" style="padding: 15px; overflow:scroll;">
  <%= render partial: "managers/api_permissions/form" %>
  </div>
</div>
<% end %>

<% content_for :tb_search do %>
  <span>resources:</span>
  <input name="name" class="easyui-textbox" style="width:100px">
  <span>method:</span>
  <select name="method" panelHeight="auto" class="easyui-combobox" style="width:100px">
    <option value="">&nbsp;</option>
    <% Common::Locale::HttpMethod.each do |value| %>
      <option value="<%= value %>"><%= value %></option>
    <% end %>
  </select> 
  <span>url_path:</span>
  <input name="path" class="easyui-textbox" style="width:100px"> 
  <a href="#" class="easyui-linkbutton" iconCls="icon-search" onclick="doSearch()">
  Search</a>
<%end%>