<!--list columns-->
<th data-options="field:'user_name',align:'center', width:'10%'">用户名</th>
<th data-options="field:'name',align:'center', width:'10%'">姓名</th>
<th data-options="field:'tenant_name',align:'center', width:'25%'">Tenant</th>
<th data-options="field:'subject_cn',align:'center', width:'5%'">学科</th>
<th data-options="field:'head_teacher',align:'center', width:'5%'">班主任</th>
<th data-options="field:'subject_classrooms',align:'center', width:'17%'">学科，班级列表</th>
<th data-options="field:'qq',align:'center', width:'5%'">QQ</th>
<th data-options="field:'phone',align:'center', width:'5%'">电话</th>
<th data-options="field:'email',align:'center', width:'5%'">邮箱</th>
<th data-options="field:'dt_update',align:'center', width:'15%'">更新时间</th>

<!--form in dialog-->
<%= render partial: "shared/manager/user_form_in_dialog" %>

<% content_for :tb_search do %>
	<span>用户名:</span>
	<input name="user_name" style="line-height:18px;border:1px solid #ccc;width:100px">
	<span>姓名:</span>
	<input name="name" style="line-height:18px;border:1px solid #ccc;width:100px">
	<span>学校名:</span>
	<input name="tenant_name" style="line-height:18px;border:1px solid #ccc;width:100px">
	<span>学科:</span>
	<select name="subject" panelHeight="auto" style="width:80px">
		<option value="">&nbsp;</option>
		<% subject_list.each do |key, value| %>
			<option value="<%= key %>"><%= value %></option>
		<% end %>
	</select>
	<a href="#" class="easyui-linkbutton" plain="true" onclick="doSearch()">Search</a>
<%end%>