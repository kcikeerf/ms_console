
<th data-options="field:'name',align:'center', width:'20%'">指标分类</th>
<th data-options="field:'rid',align:'center', width:'15%'">RID</th>
<th data-options="field:'is_group',align:'center', width:'10%'">是否分组</th>
<th data-options="field:'sys_type',align:'center', width:'15%'">英文分类</th>
<th data-options="field:'version',align:'center', width:'5%'">版本</th>

<th data-options="field:'operations',width:'auto', width:'37%', align:'center',formatter:formatOper">操作</th>

<%# content_for :content do %>
