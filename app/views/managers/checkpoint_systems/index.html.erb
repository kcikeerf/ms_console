 --><%# end %>
		
<% content_for :form do %>

  <div class='system_rid fm_hiddened_div' style="margin:5px 0px 5px 15px; display:none" >
    <label for="textbook_rid">RID</label>
    <input id="textbook_rid" name="rid" style="width:200px; height: 22px;" data-options="required:true" >
  </div>

  <div style="margin:5px 0px 5px 15px;">
    <label for="textbook_name">分类</label>
    <input class="easyui-validatebox" id="textbook_name" name="name" style="width:200px; height: 22px;" data-options="required:true">
  </div>

  <div style="margin:5px 0px 5px 15px;">
    <label for="textbook_sys_type">英文分类</label>
    <select class="easyui-combobox" id="textbook_sys_type" name="sys_type" style="width:200px;">
      <% checkpoint_type_list.each do |k,v| %>
        <option value="<%=k%>"><%=k%></option>
      <% end %>
    </select>
  </div>

  <div style="margin:5px 0px 5px 15px;">
    <label for="textbook_version">版本</label>
    <input class="easyui-validatebox" id="textbook_version" name="version" style="width:200px; height: 22px;" data-options="required:true">
  </div>

  <div style="margin:5px 0px 5px 15px;">
    <label for="textbook_term">分组</label>
        <input type="radio" name="is_group" value="true" checked="checked"> 是 &nbsp;&nbsp;
        <input type="radio" name="is_group" value="false"> 否
  </div>

  <div style="margin:5px 0px 5px 15px;">
    <label for="textbook_term">描述</label>
      <textarea rows="5" cols="40" name="desc">
      </textarea>
  </div>
<% end %>


<script type="text/javascript">
	function formatOper(val,row,index){
		var click_checkpoint_func = 'reopen(window.parent.$("#tabs"),"'+row["name"]+ '指标管理", "<%= page_info_item[:path] %>\/'+row["rid"]+'\/subject_ckps")';
		var link_str = "<a href='#'' onclick='" + click_checkpoint_func + "'>指标分类管理</a>&nbsp;";
		return link_str;
	} 
</script>

<% content_for :form_fcb do %>
  <div class='delete_ckp ' style="margin:20px 0px 5px 15px;" >
      <input name="delete_ckp" type="checkbox" >
      <label for="delete_ckp">删除所有指标：</label>
  </div>
<% end %>
