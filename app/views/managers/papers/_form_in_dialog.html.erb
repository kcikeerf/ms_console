<% content_for :form do %>
	<div class="fuid">
		<label>ID:</label>
		<%= text_field_tag :uid, '',"readonly" => "readonly" %>
	</div>
	<div class="fname">
		<label>名称:</label>
		<%= text_field_tag :heading, '', "readonly" => "readonly"%>
	</div>
	<div class="fstatus">
		<label>状态:</label>
		<%= text_field_tag :status_label, '', "readonly" => "readonly" %>
	</div>
	<div class="fback">
		<label>回退到:</label>
		<%= select_tag "back_to",options_for_select(Common::Paper::RollbackStatus.invert),{class: 'back_to'} %>
	</div>
	<div class="fckp" style="display:none;">
		<label>保留解析:</label>
		<%= radio_button_tag 'save_ckp', "true", id: "save_ckp_true"  %>&nbsp;是&nbsp;
		<%= radio_button_tag 'save_ckp', "false", id: "save_ckp_false" %>&nbsp;否&nbsp;
	</div>
<% end %>
