
<div style="margin:5px 0px 5px 15px;">
    <label><%=LABEL("activerecord.attributes.area.province")%></label>
    <select class="easyui-combobox" id="province_rid" name="province_rid" style="width:200px;">
        <% area_list[:province].each do |item| %>
          <option value="<%=item.rid%>"><%=item.name_cn%></option>
        <% end %>
    </select>
</div>

<div style="margin:5px 0px 5px 15px;">
    <label><%=LABEL("activerecord.attributes.area.city")%></label>
    <select class="easyui-combobox" id="city_rid" name="city_rid" style="width:200px;" data-options="valueField:'rid',textField:'name_cn'">
        <% area_list[:city].each do |item| %>
          <option value="<%=item.rid%>"><%=item.name_cn%></option>
        <% end %>
    </select>
</div>

