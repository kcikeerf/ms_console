<%= form_tag path, id: 'file_upload', style: 'display:none;', remote: true, multipart: true, authenticity_token: true do %>
	<%= select_tag :dimesion, options_for_select([['知识', 'knowledge'], ['技能', 'skill'], ['能力', 'ability']]) %>
	<input type="file" name='file'>
	<% if @checkpoint_system.sys_type == "xy_default" %>
		<input type="hidden" name="subject" class="subject"/>
	<%else%>
		<input type="hidden" name="subject" class="subject" value="all"/>
	<%end%>
	<input type="hidden" name="node_uid" class="node_uid"/>
	<%= hidden_field_tag :ckp_system, @checkpoint_system.id %>
	<button type="submit" class="btn btn-default"><%= t("page.submit") %></button>
<% end %>